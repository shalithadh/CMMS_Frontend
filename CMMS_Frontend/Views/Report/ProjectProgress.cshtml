
@{
    ViewData["Title"] = "Project Progress Report";
}

@section Styles {

}

<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h5>Project Progress Report</h5>
                </div>
                <div class="card-body">
                    <div class="card">
                        <div class="card-body chart-block">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="mb-3">
                                        <label>Project</label>
                                        <select id="projectFilter" class="form-select" style="width:100%;">
                                            <option value=0>Please Select</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="mb-3">
                                        <label style="color: white;">Filter</label><br />
                                        <a id="btnFilter" class="btn btn-secondary" onclick="LoadFilteredList()">Filter</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <table id="reportTable" class="display" width="100%">
                            <thead>
                                <tr>
                                    <th>Project</th>
                                    <th>Task Name</th>
                                    <th>Priority</th>
                                    <th>StatusID</th>
                                    <th>Status</th>
                                    <th>Start Date</th>
                                    <th>Start Time</th>
                                    <th>End Date</th>
                                    <th>End Time</th>
                                    <th>Assign To</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends -->

@section Scripts {
    <script src="~/scripts/Reports/project-progress.js" asp-append-version="true"></script>
}


