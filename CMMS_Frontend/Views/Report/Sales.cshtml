
@{
    ViewData["Title"] = "Sales Report";
}

@section Styles {

}

<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h5>Sales Overview Report</h5>
                </div>
                <div class="card-body">
                    <div class="card">
                        <div class="card-body chart-block">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="mb-3">
                                        <label>Year</label>
                                        <select id="yearFilter" class="form-select" style="width:100%;">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="mb-3">
                                        <label>Month</label>
                                        <select id="monthFilter" class="form-select" style="width:100%;">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="mb-3">
                                        <label style="color: white;">Filter</label><br />
                                        <a id="btnFilter" class="btn btn-secondary" onclick="LoadFilteredList()">Filter</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <table id="reportTable" class="display" width="100%">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Payment Method</th>
                                    <th>Total Amount</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends -->

@section Scripts {
    <script src="~/scripts/Reports/sales-overview.js" asp-append-version="true"></script>
}


