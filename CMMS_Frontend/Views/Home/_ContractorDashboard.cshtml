@section Styles {

}

<div class="container-fluid general-widget">
    <div class="row">
        <div class="col-sm-6 col-xl-4 col-lg-6">
            <div class="card o-hidden border-0">
                <div class="bg-primary b-r-4 card-body">
                    <div class="media static-top-widget">
                        <div class="align-self-center text-center"><i data-feather="archive"></i></div>
                        <div class="media-body">
                            <span class="m-0">Projects</span>
                            <h5 id="conTotProjects" class="mb-0 counter">xxxx</h5><i class="icon-bg" data-feather="archive"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-4 col-lg-6">
            <div class="card o-hidden border-0">
                <div class="bg-secondary b-r-4 card-body">
                    <div class="media static-top-widget">
                        <div class="align-self-center text-center"><i data-feather="award"></i></div>
                        <div class="media-body">
                            <span class="m-0">My Best Client</span>
                            <h5 id="conBestClient" class="mb-0 counter">xxxx</h5><i class="icon-bg" data-feather="award"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-4 col-lg-6">
            <div class="card o-hidden border-0">
                <div class="bg-info b-r-4 card-body">
                    <div class="media static-top-widget">
                        <div class="align-self-center text-center"><i data-feather="trending-up"></i></div>
                        <div class="media-body">
                            <span class="m-0">My Overall Rating</span>
                            <h5 id="conOverallRating" class="mb-0 counter">xxxx</h5><i class="icon-bg" data-feather="trending-up"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6 xl-100 box-col-12">
            <div class="card">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h5>Recent Projects - Top 5</h5>
                </div>
                <div class="card-body">
                    <div class="user-status table-responsive">
                        <table id="conRecentProject" class="table table-bordernone">
                            <thead>
                                <tr>
                                    <th scope="col">Project Name</th>
                                    <th scope="col">Client</th>
                                    <th scope="col">Progress</th>
                                </tr>
                            </thead>
                            <tbody id="conRecentProjectBody">                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6 xl-100 box-col-12">
            <div class="card employee-status">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h5>Recent Completed Tasks - Top 5</h5>

                </div>
                <div class="card-body">
                    <div class="user-status table-responsive">
                        <table id="conCompletedTasks" class="table table-bordernone">
                            <thead>
                                <tr>
                                    <th scope="col">Task Name</th>
                                    <th scope="col">Project</th>
                                    <th scope="col">Client</th>
                                    <th scope="col">Completed Date</th>
                                </tr>
                            </thead>
                            <tbody id="conCompletedTasksBody">                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>